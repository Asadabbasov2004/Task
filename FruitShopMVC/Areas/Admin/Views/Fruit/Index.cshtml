@{
    Layout = null;
}
@using FruitShopMVC.Models
@model IEnumerable<Fruit>; 

<div style="margin-left:1000px" class="bg-secondary rounded h-100 p-4 m-5">
    <h6 class="mb-4" >Responsive Table</h6>
    <div class="table">
        <table class="table" >
            <thead>
                <div>
                    <a asp-controller="Fruit" asp-action="Create">Create</a>
                </div>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">sybtitle</th>
                    <th scope="col">img</th>
                </tr>
            </thead>
            <tbody>

                @if(Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Header</td>
                            <td>@item.ImageUrl</td>
                            <td>
                                <a asp-controller="Fruit" asp-action="Update" asp-route-id=@item.Id>Update</a>
                            </td>
                            <td>
                                <a asp-controller="Fruit" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>
