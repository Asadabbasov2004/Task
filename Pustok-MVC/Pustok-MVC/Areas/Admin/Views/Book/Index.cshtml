@model List<Book>
@{
    int count = 0;
}
<div class="container ">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">description</th>
                    <th scope="col ">Price</th>
                    <th scope="col">Author</th>
             
                    <th>
                        
                        <a class="btn btn-danger" asp-controller="Book" asp-action="Create">Create</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    
                count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@book.Id</td>
                        <td>@book.Name</td>
                        <td>@book.Description</td>
                        <td>@book.Price</td>
                        <td>@book.AuthorId</td>
                        <td>

                            <a class="btn btn-primary" asp-controller="Book" asp-action="Update" asp-route-id="@book.Id">Update</a>
                            <a class="btn btn-primary" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Update</a>

                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>


</div>
