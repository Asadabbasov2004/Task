@model Book
<form method="post" enctype="multipart/form-data" asp-controller="Category" asp-action="Create">
    <div class="container">
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="mb-3 col-md-3">
                    <label asp-for="Name" class="form-label">Title</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" style="color:red"></span>
                </div>
                <div class="mb-3 col-md-3">
                    <label asp-for="Description" class="form-label">SubTitle</label>
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" style="color:red"></span>
                </div>
                <div class="mb-3 col-md-3">
                    <label asp-for="ImageF" class="form-label">Image File</label>
                    <input asp-for="ImageFile" class="form-control">
                    <span asp-validation-for="ImageFile" style="color:red"></span>
                </div>

            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>




</form>