@using Maxim.Models
@model List<Service>
<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Responsive Table</h6>
        <div class="table-responsive">
            <table class="table">
                <a class="btn btn-light" asp-action="Create" asp-controller="Service">Create</a>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">IconUrl</th>
                    </tr>
                </thead>
                <tbody>
                 @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.IconUrl</td>
                            <td><a asp-action=""></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>