@{
    int count = 0;
};
<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th scope="col">Name</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Product){
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <div >
                        <img src="@item.Url"><img>
                    </div>
                </td>
            </tr>
        }
   
    </tbody>
</table>